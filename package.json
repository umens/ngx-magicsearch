{
  "name": "ngx-magicsearch",
  "version": "2.2.0",
  "description": "Magic Search/Faceted Search Library for Angular 2.",
  "repository": {
    "type": "git",
    "url": "https://github.com/umens/ngx-magicsearch"
  },
  "author": {
    "name": "Ulysse Mensa",
    "email": "ulysse.mensa@gmail.com"
  },
  "keywords": [
    "angular",
    "ng",
    "ngx",
    "ng2",
    "angular2",
    "magicsearch",
    "faceted-search",
    "typescript",
    "angular5",
    "angular4"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umens/ngx-magicsearch/issues"
  },
  "homepage": "https://github.com/umens/ngx-magicsearch#readme",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "test-ci": "ng test --watch=false --single-run=true --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "ci": "npm run lint && npm run test-ci && npm run build && npm run docs",
    "docs": "compodoc -p src/tsconfig.doc.json -d docs",
    "doc:serve": "compodoc -s -d docs",
    "doc:buildandserve": "compodoc -p src/tsconfig.doc.json -d docs -s",
    "packagr": "ng-packagr -p ng-package.json",
    "codecov": "cat coverage/lcov.info | codecov",
    "Cancel-postversion": "git push && git push --tags",
    "prepackagr": "rimraf dist coverage",
    "postpackagr": "rimraf dist coverage",
    "preversion": "npm run ci",
    "deliver": "npm version minor -m \"Updating library to %s\" && npm run packagr && npm publish dist"
  },
  "private": false,
  "dependencies": {},
  "devDependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/cli": "~1.7.3",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@compodoc/compodoc": "^1.0.9",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codecov": "^3.0.0",
    "codelyzer": "^4.0.1",
    "core-js": "^2.5.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.2.0",
    "protractor": "~5.1.2",
    "rxjs": "5.5.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "2.4.2",
    "zone.js": "^0.8.19"
  }
}
